@page
@model Individual_Sem2_Web.Pages.ForgotPasswordModel
@{
	ViewData["Title"] = "Forgot Password";
	Layout = "_LayoutMain";
}
<form method="post">
    <div class="container-fluid py-5 ">
        <div class="row justify-content-center">
            <div class="col-lg-8 bg-dark " style="border-radius: 1rem;">
                <h2 class="mb-4">Please insert your email for resetting your password!</h2>
                <div class="row">

                    <div class="col-md-12 ">
                        <div class="mb-3 ">
                            <label asp-for="Email" class="form-label text-white-50">Your Email:</label>
                            <input asp-for="Email" type="text" class="form-control" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h3>@TempData["ErrorMessage"]</h3>
                                </div>
                            }
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg mb-5" asp-action="ForgotPassword">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>