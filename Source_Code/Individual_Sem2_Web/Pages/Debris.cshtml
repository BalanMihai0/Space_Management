@page
@model Individual_Sem2_Web.Pages.DebrisModel
@{
	ViewData["Title"] = "Debris";
	Layout = "_LayoutMain";
}
<div class="container-fluid bg-dark text-light">
    <div class="row">
        @foreach (Debris debris in Model.debrisList)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card mb-3 bg-secondary text-light">
                    <div class="card-body">
                        <h5 class="card-title">@debris.Name</h5>
                        <h6 class="card-subtitle mb-2">Danger Radius: @debris.DangerRadius km</h6>
                    </div>
                    <ul class="list-group list-group-flush bg-dark">
                        <li class="list-group-item bg-dark text-light">Size (m): @debris.Size</li>
                        <li class="list-group-item bg-dark text-light">Mass (kg): @debris.Mass</li>
                        <li class="list-group-item bg-dark text-light">Position (x, y, z): @debris.Position.X, @debris.Position.Y, @debris.Position.Z</li>
                        <li class="list-group-item bg-dark text-light">Velocity (x, y, z): @debris.Velocity.X, @debris.Velocity.Y, @debris.Velocity.Z</li>
                        <li class="list-group-item bg-dark text-light"><a href="./DetailsDebris?name=@debris.Name" target="_blank" class="text-light">Details</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>